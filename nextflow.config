

manifest {
    author = "P22G51"
    homePage = 'https://github.com/LocationAwareScientificWorkflows-P22G51/NextFlowLibrary-AutoLocationExecutor'
    description = 'LocationAwareScientificWorkflows'
    mainScript = 'fastqc.nf'
    version = '1.0'
}

params {
   input = "/external/diskC/22P63/shotgun/SRR13061610.fastq.gz"
   forks = 1
}

profiles {

    // For execution on a local machine, no containerization. -- Default
    standard {
        process.executor = 'local'
    }

    slurm {
        process.executor = 'slurm'
        process.queue = 'batch'
    }
}

trace {
    enabled = true
    file = "mytrace.txt"
    overwrite = false
}

report {
    enabled = true
    file = "myreport.html"
    overwrite = false
}
